<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:stcpui.ViewModels"
             xmlns:converters="clr-namespace:stcpui.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:ModbusClientViewModel"
             x:Class="stcpui.Views.ModbusClient">
    
    <UserControl.Resources>
        <!-- 正确方式1：直接实例化转换器 -->
        <converters:StringIsNotNullOrEmptyConverter x:Key="StringIsNotNullOrEmptyConverter"/>
    </UserControl.Resources>
    
    <Grid RowDefinitions="*,Auto" ColumnDefinitions="250,200,*" Margin="10">
        <!-- 左侧参数设置区域 -->
        <Border Grid.Row="0" Grid.Column="0" 
                Background="#F5F5F5" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,10,0">
            <!-- 您原有的StackPanel和所有输入控件完全保持不变 -->
            <StackPanel Margin="15" Spacing="12">
                <!-- IP地址输入 -->
                <StackPanel>
                    <TextBlock Text="IP地址" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Watermark="例如：192.168.1.100" 
                             Text="{Binding IpAddress}"/>
                </StackPanel>
                
                <!-- 端口输入 -->
                <StackPanel>
                    <TextBlock Text="端口" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Watermark="例如：502" 
                             Text="{Binding Port}"/>
                </StackPanel>
                
                <!-- 设备地址 -->
                <StackPanel>
                    <TextBlock Text="设备地址" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Watermark="0-255" 
                             Text="{Binding DeviceAddress}"/>
                </StackPanel>
                
                <!-- 功能码下拉框 -->
                <StackPanel>
                    <TextBlock Text="功能码" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox SelectedItem="{Binding FunctionCode}"
                              ItemsSource="{Binding FunctionCodes}"
                              >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- 开始地址 -->
                <StackPanel>
                    <TextBlock Text="开始地址" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Watermark="起始寄存器地址" 
                             Text="{Binding StartAddress}"/>
                </StackPanel>
                
                <!-- 读取长度 -->
                <StackPanel>
                    <TextBlock Text="读取长度" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Watermark="读取寄存器数量" 
                             Text="{Binding ReadLength}"/>
                </StackPanel>
            
                <!-- 按钮区域 -->
                <Grid Margin="0,20,0,0" ColumnDefinitions="*,10,*">
                    <Button Grid.Column="0" 
                            Content="连接" 
                            Command="{Binding ToggleConnectionAsync}"
                            Classes="primary"/>
                
                    <Button Grid.Column="2" 
                            Content="读取数据" 
                            Command="{Binding ReadDataAsync}"
                            Classes="success"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="0" Grid.Column="1" 
                Background="#F5F5F5" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,10,0">
            <!-- 您原有的StackPanel和所有输入控件完全保持不变 -->
            <StackPanel Margin="15" Spacing="12">
                <StackPanel>
                    <CheckBox Content="带符号解析" IsChecked="{Binding IsSinged}" />
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 右侧数据展示区域 -->
        <Border Grid.Row="0" Grid.Column="2" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1,1,0,0"
                CornerRadius="4"
                IsVisible="{Binding HasData}">
            <!-- 您原有的ScrollViewer和ItemsControl保持不变 -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DataResults}" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding BackgroundColor}" 
                                    CornerRadius="3" Margin="0,2" Padding="8,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- <TextBlock Grid.Column="0"  -->
                                    <!--            Text="{Binding Address, StringFormat='0000:'}"  -->
                                    <!--            FontFamily="Consolas, Courier New" FontSize="12" -->
                                    <!--            Foreground="Gray" Margin="0,0,5,0"/> -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding DisplayText, StringFormat='X4'}" 
                                               FontFamily="Consolas, Courier New" FontSize="12"
                                               FontWeight="Bold"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                Background="#E3F2FD" 
                BorderBrush="#BBDEFB" 
                BorderThickness="1,1,0,0"
                Padding="10,6"
                IsVisible="{Binding StatusMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}">
        
            <Grid ColumnDefinitions="Auto,*">
                <!-- 修正后的PathIcon -->
                <PathIcon Grid.Column="0" 
                          Data="{StaticResource InfoIconGeometry}" 
                          Width="16" 
                          Height="16" 
                          Margin="0,0,8,0"
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource SystemAccentColor}"/>
            
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
        
    </Grid>
    
    <UserControl.Styles>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    
        <Style Selector="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    
        <Style Selector="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </UserControl.Styles>
    
</UserControl>
